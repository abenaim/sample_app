<h1>Inscription</h1>

<!-- mÃ©thode helper form_for -->
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', :object => f.object %> <!-- il s'agit d'un partial-->
  <div class="field">
      <%= f.label :nom, "Nom" %><br />
      <%= f.text_field :nom %>
    </div>
  <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.text_field :email %>
   </div>
   <div class="field">
      <%= f.label :password, "Password" %><br />
      <%= f.password_field :password %>
   </div>
   <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br />
      <%= f.password_field :password_confirmation %>
   </div>
  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>